
@{
    ViewBag.Title = "Login";

    Layout = "_Layout_ForLogin.cshtml";
}

<style>
    body {
        background-color: lightgrey;
    }

    a:link {
        color: deepskyblue;
    }

    /* visited link */
    a:visited {
        color: darkturquoise;
    }

    /* mouse over link */
    a:hover {
        color: deepskyblue;
    }

    /* selected link */
    a:active {
        color: cornflowerblue;
    }

    div.divPrimar {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
</style>
<body>
    <div class="divPrimar col-md-offset-3 col-md-6">

        <h2><strong>Login</strong></h2>

        <hr />


        @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.DemandedUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("User Name", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.Editor("UserName", new { htmlAttributes = new { @class = "input-lg form-control" } })
                        @Html.ValidationMessage("UserName", "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">

                        @Html.Password("Password", "", new { @class = "input-lg form-control" })
                        @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Login" class="btn btn-primary btn-lg col-md-12" />
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <div style="margin:auto; text-align:center">
                        <input type="button" value="Registration Page" onclick="window.location.href='@Url.Action("Registration", "Home")'" class="btn btn-success btn-lg" />
                    </div>
                </div>

            </div>

        }


    </div>
</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

